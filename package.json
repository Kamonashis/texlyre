{
	"name": "texlyre",
	"private": true,
	"version": "0.2.10",
	"description": "A local-first LaTeX web editor with real-time collaboration.",
	"author": "Fares Abawi <fares@abawi.me> (https://abawi.me)",
	"license": "AGPL-3.0-or-later",
	"repository": {
		"type": "git",
		"url": "https://github.com/texlyre/texlyre.git"
	},
	"type": "module",
	"scripts": {
		"predev": "node scripts/copy-pdf-cmaps.cjs",
		"dev": "node scripts/generate-plugins-index.js && vite",
		"dev:https": "node scripts/generate-plugins-index.js && cross-env VITE_USE_HTTPS=true vite --host",
		"build": "node scripts/update-sw-version.js && node scripts/generate-plugins-index.js && tsc && vite build",
		"build:clean": "node scripts/clean-cache.cjs && npm run build",
		"clean:cache": "node scripts/clean-cache.cjs",
		"generate-plugins": "node scripts/generate-plugins-index.js",
		"lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
		"clean": "eslint . --ext ts,tsx --fix && npx @biomejs/biome check --fix",
		"preview": "vite preview"
	},
	"dependencies": {
		"@biomejs/biome": "^2.1.3",
		"@codemirror/autocomplete": "^6.18.6",
		"@codemirror/lang-markdown": "=6.3.4",
		"@codemirror/language": "^6.11.2",
		"@codemirror/lint": "^6.8.5",
		"@codemirror/state": "^6.5.2",
		"@codemirror/theme-one-dark": "^6.1.3",
		"@codemirror/view": "^6.38.1",
		"@lezer/common": "^1.2.3",
		"@lezer/generator": "^1.8.0",
		"@lezer/highlight": "^1.2.1",
		"@lezer/lr": "^1.4.2",
		"@picocss/pico": "^2.1.1",
		"@replit/codemirror-vim": "^6.3.0",
		"bib-editor": "^1.14.0",
		"codemirror": "^6.0.2",
		"codemirror-lang-bib": "^0.1.1",
		"codemirror-lang-latex": "^0.1.0-alpha.2",
		"file-saver": "^2.0.5",
		"filepizza-client": "^2.0.0-alpha.2",
		"idb": "^8.0.3",
		"jszip": "^3.10.1",
		"lib0": "^0.2.114",
		"lodash": "^4.17.21",
		"mime": "^4.0.7",
		"nanoid": "^5.1.5",
		"next": "^15.4.5",
		"pdfjs-dist": "5.4.54",
		"peerjs": "^1.5.5",
		"qrcode": "^1.5.4",
		"react": "^19.1.1",
		"react-ace": "^14.0.1",
		"react-dom": "^19.1.1",
		"react-pdf": "10.0.1",
		"vite-plugin-wasm": "^3.5.0",
		"workbox-build": "^7.3.0",
		"y-codemirror.next": "=0.3.5",
		"y-indexeddb": "^9.0.12",
		"y-webrtc": "^10.3.0",
		"y-websocket": "^3.0.0",
		"yjs": "^13.6.27"
	},
	"overrides": {
		"rimraf": "^4.0.0"
	},
	"devDependencies": {
		"@types/qrcode": "^1.5.5",
		"@types/react": "^19.1.9",
		"@types/react-dom": "^19.1.7",
		"@vitejs/plugin-basic-ssl": "^2.1.0",
		"@vitejs/plugin-react": "^4.7.0",
		"cross-env": "^10.0.0",
		"eslint": "9.32.0",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"fs-extra": "^11.3.0",
	   "typescript": "^5.8.0",
			   "typescript-eslint": "^8.38.0",
